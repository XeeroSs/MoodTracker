<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dslsls"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="12dp"
    android:orientation="horizontal"
    android:weightSum="8">

    <FrameLayout
        android:id="@+id/FrameLayout_1"
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_marginEnd="@null"
        android:layout_marginLeft="@null"
        android:layout_marginRight="@null"
        android:layout_marginTop="@null"
        android:background="@null">

        <ImageButton
            android:id="@+id/image_button_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="25dp"
            android:layout_marginTop="21dp"
            android:layout_weight="0.1"
            android:background="@null"
            android:padding="8dp"
            android:src="@drawable/ic_comment_black_48px" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:text="@null"
            android:textColor="@color/black"/>

    </FrameLayout>

</LinearLayout>